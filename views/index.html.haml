      %h2.section-title
        CONTACT
      .contact.u-margin-top
        .contact__email
          %span Contact:
          %a{href: "mailto:info@aporamusic.com", title: "email"} info[at]aporamusic.com
        .contact__social
          %a.social-link{href: "http://www.facebook.com/aporamusic", target: "_blank", title: "Apora on Facebook"}
            %img.js-load-svg.icon.icon--facebook{alt: "facebook", src: "img/icon_facebook.svg"}
